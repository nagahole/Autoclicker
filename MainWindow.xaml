<Window x:Class="Autoclicker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Autoclicker"
        mc:Ignorable="d"
        Title="MainWindow" Height="170" Width="350" ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        Background="#1f2833">
    <Grid>
        <Button BorderBrush="{x:Null}" Foreground="{x:Null}" BorderThickness="0" Click="ChangeHotkey_Click" VerticalAlignment="Top" HorizontalAlignment="Center" Width="344" Height="59">
            <Button.Style>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Background" Value="#0B0C10"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border Background="{TemplateBinding Background}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#FF242529"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
            
            <TextBlock Name="HotkeyText" Text="MouseButton3" Foreground="#FFC5C6C7" FontSize="16"/>
        </Button>

        <Label FontSize="15" Foreground="#FF45A29E" Margin="238,63,20,49" Background="{x:Null}">Min Cps</Label>
        <Rectangle Margin="0,59,0,42" Fill="#FF313336" HorizontalAlignment="Left" VerticalAlignment="Stretch" Width="196" Height="40"/>
        <TextBox FontSize="17" BorderThickness="0" TextChanged="MinCpsTextBox_TextChanged" Name="MinCpsTextBox" Text="12" Padding="3" TextAlignment="Center" Margin="0,63,148,46" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#FF849795" SelectionBrush="{x:Null}"></TextBox>

        <Label FontSize="15" Margin="238,105,20,7" Foreground="#FF45A29E">Max Cps</Label>
        <Rectangle Margin="0,101,0,0" Fill="#FF313336" HorizontalAlignment="Left" VerticalAlignment="Stretch" Height="40" Width="196"></Rectangle>
        <TextBox FontSize="17" BorderThickness="0" TextChanged="MaxCpsTextBox_TextChanged" Name="MaxCpsTextBox" Text="14" Padding="3" TextAlignment="Center" Margin="0,105,148,4" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#FF849795" SelectionBrush="{x:Null}"/>
    </Grid>
</Window>